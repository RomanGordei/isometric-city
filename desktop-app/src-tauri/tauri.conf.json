{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "ISO Games",
  "identifier": "com.isogames.desktop",
  "version": "1.0.0",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ISO Games",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Game",
    "shortDescription": "Play ISO City and ISO Coaster",
    "longDescription": "A desktop application to play ISO City and ISO Coaster games with split pane support.",
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}
